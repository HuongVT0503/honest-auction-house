{
  "compilerOptions": {
    "module": "commonjs",                  //for Node.js
    "moduleResolution": "node",            //standard node resolution
    "target": "es2020",          
    "outDir": "./dist",              
    "rootDir": "./src",             
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "verbatimModuleSyntax": false         
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}