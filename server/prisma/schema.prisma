generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String    // In a real app, hash this!
  auctions  Auction[] @relation("SellerAuctions")
  bids      Bid[]
  createdAt DateTime  @default(now())
}

model Auction {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  status      AuctionStatus @default(OPEN)
  endsAt      DateTime
  
  sellerId    Int
  seller      User          @relation("SellerAuctions", fields: [sellerId], references: [id])
  bids        Bid[]
  
  createdAt   DateTime      @default(now())
}

model Bid {
  id          Int      @id @default(autoincrement())
  
  auctionId   Int
  auction     Auction  @relation(fields: [auctionId], references: [id])
  bidderId    Int
  bidder      User     @relation(fields: [bidderId], references: [id])

  // --- ZKP DATA ---
  commitment  String   @unique 

  // --- REVEAL DATA ---
  //NULL until the auction enters 'REVEAL' phase
  amount      Int?     
  secret      String?  // Optional: store the secret after reveal for auditability
  
  createdAt   DateTime @default(now())

  @@unique([auctionId, bidderId]) // Prevent a user from bidding twice on the same auction
}

enum AuctionStatus {
  OPEN      //commitments
  REVEAL    //raw values + secrets
  CLOSED    // Winner calculated
}