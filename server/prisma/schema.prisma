generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String   
  role        Role      @default(USER)
  auctions    Auction[] @relation("SellerAuctions")
  bids        Bid[]
  wonAuctions Auction[] @relation("AuctionWinner") 
  createdAt   DateTime  @default(now())
}

model Auction {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  status      AuctionStatus @default(OPEN)

  durationMinutes Int       @default(10) //total duratiom
  biddingEndsAt   DateTime          //open phase
  
  sellerId    Int
  seller      User          @relation("SellerAuctions", fields: [sellerId], references: [id])
  bids        Bid[]

  winnerId    Int?          
  winner      User?         @relation("AuctionWinner", fields: [winnerId], references: [id])
  
  winningAmount   Int?
  
  createdAt   DateTime      @default(now())
}

model Bid {
  id          Int      @id @default(autoincrement())
  
  auctionId   Int
  auction     Auction  @relation(fields: [auctionId], references: [id])
  bidderId    Int
  bidder      User     @relation(fields: [bidderId], references: [id])

  // --- ZKP DATA ---
  commitment  String   @unique 

  // --- REVEAL DATA ---
  //NULL until the auction enters 'REVEAL' phase
  amount      Int?     
  secret      String?  // todo: store the secret after reveal for auditability
  
  createdAt   DateTime @default(now())

  @@unique([auctionId, bidderId]) // Prevent a user from bidding twice on the same auction
}

enum AuctionStatus {
  OPEN      //commitments
  REVEAL    //raw values + secrets
  CLOSED    // Winner calculated
}